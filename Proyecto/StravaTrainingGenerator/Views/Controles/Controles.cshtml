    @* Tarjetas con efecto flip *@
    <article class="component" id="flipCards">
        <h2 class="title_component">Tarjetas con efecto Flip</h2>
        @await Html.PartialAsync("~/Views/Controles/Partial_Tarjetas_Flip.cshtml")
