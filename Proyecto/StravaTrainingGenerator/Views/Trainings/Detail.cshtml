@model int
@{
    ViewBag.Title = "Detalle del entrenamiento";
    Layout = "~/Views/Shared/Master.cshtml";
}

@section js {
    <script src="~/Content/Viewsjs/DetailTraining.js"></script>
    <script type="text/javascript">
        var seeResultsUrl = "@(Html.Raw(Url.Action("SeeResults", "Trainings", new { code = Model, trainingCode = "-1" })))";
    </script>
}

<section class="components training_detail">
    <div class="back_button">
        <a href="@Url.Action("Index", "Trainings")">Volver</a>
    </div>
    <div class="top_details form">
        <div class="row_form">
            <div class="column_form">
                <p class="basic_text">Fecha inicio plan: 07/12/2020</p>
            </div>
            <div class="column_form">
                <p class="basic_text">Fecha fin plan: 28/02/2021</p>
            </div>
        </div>
        <div class="row_form">
            <div class="column_form">
                <p class="basic_text">Tipo de plan: 10km (12 semanas)</p>
            </div>
            <div class="column_form">
                <p class="basic_text">Marca inicial 5km: 21 min. 5 seg.</p>
            </div>
        </div>
    </div>

    <div class="weeks w100">

        <div class="weeks_tabs_div">
            <ul class="weeks_list">
                @for (int i = 1; i <= 12; i++)
                {
                    <li class="week @(i == 1 ? "active" : "")" data-tab="@i">Semana @i</li>
                }
            </ul>
        </div>

        <div class="content-wrapper" id="detail_week">
            <div class="date_start"><h2 class="basic_text">Fecha inicio de la semana: 07/12/2020</h2></div>
            <div class="grid_div">
                <div class="grid" id="detail_grid">

                </div>
            </div>
        </div>

    </div>
    <!--/ tabs -->
</section>